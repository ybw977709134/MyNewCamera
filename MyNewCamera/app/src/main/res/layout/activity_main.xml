<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/main_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

        </FrameLayout>
        <View
            android:background="@color/balck_title"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:id="@+id/layout_main"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white_bg"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/rb1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/rb1_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/icon_camera_current"/>

                <TextView
                    android:id="@+id/rb1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="摄像机"
                    android:textColor="@color/balck_title_02"
                    android:textSize="13sp"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/rb3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
               >

                <ImageView
                    android:id="@+id/rb3_img"
                    android:layout_width="27dp"
                    android:layout_height="26dp"
                    android:src="@mipmap/icon_square"/>

                <TextView
                    android:id="@+id/rb3_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="视频广场"
                    android:textColor="@color/balck_title_02"
                    android:textSize="13sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rb2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
               >

                <ImageView
                    android:id="@+id/rb2_img"
                    android:layout_width="25dp"
                    android:layout_height="26dp"
                    android:src="@mipmap/icon_my"/>

                <TextView
                    android:id="@+id/rb2_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的"
                    android:textColor="@color/balck_title_02"
                    android:textSize="13sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>