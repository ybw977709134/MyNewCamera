<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical">
    <!--标题-->
    <RelativeLayout
        android:id="@+id/activity_huodong_setting_title_rel"
        android:layout_width="match_parent"
        android:background="@color/result_view"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/activity_chose_sex_img_return"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:paddingRight="15dp"
            android:src="@mipmap/back_return"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="设置昵称"
            android:textColor="@color/white"
            android:textSize="17sp"/>

        <Button
            android:id="@+id/nice_change_queding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="14sp"
            />

    </RelativeLayout>
    <!--主体部分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icon_user"/>
        <com.onemeter.mynewcamera.utils.ClearEditText
            android:id="@+id/text_setting_nice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:hint="请输入昵称"
            android:textCursorDrawable="@drawable/cursor_green"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:textSize="15sp"/>

    </LinearLayout>
</LinearLayout>