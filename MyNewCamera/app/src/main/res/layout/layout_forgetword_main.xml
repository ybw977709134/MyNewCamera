<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rel_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/result_view"
        >
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:paddingRight="15dp"
            android:src="@mipmap/back_return"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="找回密码"
            android:textSize="16sp"
            android:textColor="@color/white"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_below="@+id/rel_title"
        android:layout_marginTop="10dp"
        android:id="@+id/linearLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/white">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/icon_phone"/>
            <com.onemeter.mynewcamera.utils.ClearEditText
                android:id="@+id/editText_register_username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:hint="请输入手机号码"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:background="@color/white"
                android:textCursorDrawable="@drawable/cursor_green"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="16sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:background="@color/gainsboro"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/white">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/icon_code"/>
            <com.onemeter.mynewcamera.utils.ClearEditText
                android:id="@+id/code"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@+id/editText_register_username"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:hint="输入验证码"
                android:background="@color/white"
                android:inputType="number"
                android:textCursorDrawable="@drawable/cursor_green"
                android:padding="10dp"
                android:textSize="16sp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/send_sms_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/editText_register_username"
                android:layout_marginRight="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/edt_style_btn_code"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:background="@color/gainsboro"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/white">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/icon_pw"/>
            <com.onemeter.mynewcamera.utils.ClearEditText
                android:layout_below="@+id/send_sms_btn"
                android:id="@+id/editText_new_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:background="@color/white"
                android:hint="请输入新密码"
                android:imeOptions="actionNext"
                android:padding="10dp"
                android:inputType="textPassword"
                android:textCursorDrawable="@drawable/cursor_green"
                android:singleLine="true"
                android:textSize="16sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:background="@color/gainsboro"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@color/white">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/icon_pw"/>
            <com.onemeter.mynewcamera.utils.ClearEditText
                android:layout_below="@+id/editText_new_password"
                android:id="@+id/editText_new_password_2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:background="@color/white"
                android:hint="再次确认新密码"
                android:textCursorDrawable="@drawable/cursor_green"
                android:inputType="textPassword"
                android:imeOptions="actionNext"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/resetting_butoon"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edt_style_btn"
        android:layout_marginTop="30dp"
        android:text="完成"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        tools:targetApi="honeycomb" />

</RelativeLayout>