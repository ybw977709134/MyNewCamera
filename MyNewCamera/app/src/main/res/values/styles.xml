<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--标题风格-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--通知栏风格-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--组件如按钮、输入框等风格-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MyButton" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_select</item>
    </style>

    <style name="MySwitch" parent="@android:style/Widget.CompoundButton">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/toggle_select_background</item>
    </style>

    <style name="ControlSwitch" parent="@android:style/Widget.CompoundButton">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/playstateselete</item>
    </style>

    <style name="CustomWindowTitleBackground">
        <item name="android:background">#8A2BE2</item>
    </style>

    <style name="AppTitle" parent="android:Theme">
        <item name="android:windowTitleSize">20dp</item>
    </style>

    <style name="MySurface">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <!-- 弹出dialog -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/dialog_choose_bg</item>
    </style>




</resources>
